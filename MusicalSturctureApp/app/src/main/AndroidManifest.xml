<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abdullah.musicalsturctureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:background="@drawable/musical">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayNowActivity"
            android:label="@string/PlayNow"/>
        <activity android:name=".PlayListActivity"
            android:label="@string/PlayList"/>
        <activity android:name=".StoreActivity"
            android:label="@string/Store"/>
    </application>

</manifest>